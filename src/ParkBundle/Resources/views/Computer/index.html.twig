{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Computer list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ip</th>
                <th>Enabled</th>
                <th>Person</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('computer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.ip }}</td>
                <td>
                    {% if entity.enabled %}
                        <span class="glyphicon glyphicon-ok color-green pull-left" aria-hidden="true"></span>
                    {% else %}
                        <span class="glyphicon glyphicon-remove color-red" aria-hidden="true"></span>
                    {% endif %}
                </td>
                <td>{{ entity.person|default("NoBody") }}</td>
                <td>
                    <a class="btn btn-xs btn-primary" href="{{ path('computer_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span> Show</a>
                    <a class="btn btn-xs btn-warning" href="{{ path('computer_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('computer_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
